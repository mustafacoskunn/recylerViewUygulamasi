<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/filmResim"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/birzamanlaranadoluda" />

            <TextView
                android:id="@+id/filmAdiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filmResim"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/filmFiyatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filmAdiText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="TextView"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sepeteEkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filmFiyatText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Sepete Ekle"
                android:textSize="13dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menuAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sepeteEkle"
                android:layout_marginStart="-4dp"
                android:layout_marginLeft="-4dp"


                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/sepeteEkle"
                android:layout_toRightOf="@+id/sepeteEkle"
                app:srcCompat="@drawable/nokta" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>